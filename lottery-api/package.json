{
  "name": "lottery-api",
  "version": "1.0.0",
  "description": "Lottery system API with Node.js, TypeScript and PostgreSQL",
  "main": "dist/server.js",
  "scripts": {
    "build": "prisma generate && npx tsc",
    "start": "node dist/server.js",
    "dev": "prisma generate && nodemon src/server.ts",
    "dev:migrate": "prisma migrate dev",
    "db:push": "prisma db push",
    "db:pull": "prisma db pull",
    "db:studio": "prisma studio",
    "db:seed": "ts-node prisma/seed.ts",
    "generate": "prisma generate",
    "migrate": "prisma migrate deploy",
    "docs": "open http://localhost:4000/api-docs",
    "test": "echo \"Error: no test specified\" && exit 1",
    "test-types": "ts-node test-types.ts"
  },
  "dependencies": {
    "@prisma/client": "^6.16.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.9.7",
    "prisma": "^6.16.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.15",
    "@types/express": "^4.17.20",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.8.9",
    "@types/nodemailer": "^6.4.13",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/uuid": "^9.0.6",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "tslib": "^2.8.1",
    "typescript": "^5.2.2"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "keywords": [
    "lottery",
    "api",
    "typescript",
    "postgresql",
    "prisma",
    "orm"
  ],
